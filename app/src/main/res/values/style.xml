<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextStyle" parent="@android:style/TextAppearance.Small.Inverse">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="ToolbarTitleStyle" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dashboard_rr">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="dashboard_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="logo">@drawable/logo_appbar</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextStyle" parent="@android:style/TextAppearance.Small.Inverse">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DateTextStyle" parent="@android:style/TextAppearance.Small.Inverse">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="CalendarStyle" parent="@android:style/Widget.Button.Small">
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ReminderStyle" parent="@android:style/TextAppearance.Small.Inverse">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CheckBoxAppTheme" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/apptheme_btn_check_holo_light</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="whodas_Instruction_questiontext" parent="@android:style/TextAppearance.Medium.Inverse">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">#000000</item>
    </style>


    <style name="CustomBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowAnimationStyle">@style/BottomSheetAnim</item>
    </style>

    <style name="BottomSheetAnim">
        <item name="android:windowEnterAnimation">@anim/slide_up_slow</item>
        <item name="android:windowExitAnimation">@anim/slide_down_slow</item>
    </style>

</resources>