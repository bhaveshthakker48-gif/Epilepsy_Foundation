<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_bg"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblMedication"
                    style="@style/ReminderStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/expandable_panel_grad_bg"
                    android:drawableEnd="@drawable/down_arrow"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/title_medication" />

                <ImageView
                    android:id="@+id/btnViewMedic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/next_arrow" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lblMediContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="vertical"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:visibility="gone">

                <!-- Medication Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_medication_name" />

                    <EditText
                        android:id="@+id/autoTextMedicationName"
                        style="@style/EditTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:ems="10"
                        android:imeOptions="actionDone" />
                </LinearLayout>

                <!-- Start Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_medication_start_date" />

                    <EditText
                        android:id="@+id/txtStartDate"
                        style="@style/DateTextStyle"
                        android:layout_width="0dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2" />

                    <ImageView
                        android:id="@+id/imgStartDatePic"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:contentDescription="@string/img_calendar_desc"
                        android:scaleType="centerInside"
                        android:src="@drawable/calendar" />
                </LinearLayout>

                <!-- Start Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_medication_start_time" />

                    <EditText
                        android:id="@+id/txtStartTime"
                        style="@style/DateTextStyle"
                        android:layout_width="0dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2" />

                    <ImageView
                        android:id="@+id/imgEventTimePick"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:contentDescription="@string/img_calendar_desc"
                        android:scaleType="centerInside"
                        android:src="@drawable/clock" />
                </LinearLayout>

                <!-- End Date (Hidden) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/end_date" />

                    <EditText
                        android:id="@+id/txtEndDate"
                        style="@style/DateTextStyle"
                        android:layout_width="0dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2" />

                    <ImageView
                        android:id="@+id/imgEndDatePic"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:contentDescription="@string/img_calendar_desc"
                        android:scaleType="centerInside"
                        android:src="@drawable/calendar" />
                </LinearLayout>

                <!-- End Time (Hidden) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/end_time" />

                    <EditText
                        android:id="@+id/txtEndTime"
                        style="@style/DateTextStyle"
                        android:layout_width="0dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2" />

                    <ImageView
                        android:id="@+id/imgEndTimePick"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:contentDescription="@string/img_calendar_desc"
                        android:scaleType="centerInside"
                        android:src="@drawable/clock" />
                </LinearLayout>

                <!-- Duration -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_title_duration" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtDuration"
                            style="@style/TextStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:imeOptions="actionDone"
                            android:inputType="numberDecimal"
                            android:maxLength="2" />

                        <Spinner
                            android:id="@+id/spnDurationUnit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:dropDownSelector="@drawable/apptheme_list_selector_holo_light" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Frequency -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_frequency" />

                    <Spinner
                        android:id="@+id/spnFrequency"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:dropDownSelector="@drawable/apptheme_list_selector_holo_light" />
                </LinearLayout>

                <!-- Dose -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_dose" />

                    <EditText
                        android:id="@+id/txtDose"
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:ems="10"
                        android:imeOptions="actionDone" />
                </LinearLayout>

                <!-- Submit Button -->
                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/rounded_button"
                    android:text="@string/btn_add" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblNextVisit"
                    style="@style/ReminderStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/expandable_panel_grad_bg"
                    android:drawableEnd="@drawable/down_arrow"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/title_next_visit" />

                <ImageView
                    android:id="@+id/btnViewNextVisit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/next_arrow" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lblVisitContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"                android:orientation="vertical"
                android:paddingVertical="@dimen/_8sdp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/doctor_name" />

                    <EditText
                        android:id="@+id/txtVisitDoc"
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:imeOptions="actionDone"
                        android:layout_marginStart="@dimen/_8sdp" />
                </LinearLayout>


                <!-- Event Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_event_date" />

                    <EditText
                        android:id="@+id/autoTextVisiteventDate"
                        style="@style/EditTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:imeOptions="actionDone"
                        android:layout_marginStart="@dimen/_8sdp" />

                    <ImageView
                        android:id="@+id/imgVisitEventDatePick"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:background="@drawable/calendar"
                        android:contentDescription="@string/img_calendar_desc"
                        android:scaleType="centerInside" />
                </LinearLayout>

                <!-- Event Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_event_time" />

                    <EditText
                        android:id="@+id/txtVisitEventTime"
                        style="@style/DateTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:layout_marginStart="@dimen/_8sdp" />

                    <ImageView
                        android:id="@+id/imgVisitEventTimePick"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:background="@drawable/clock"
                        android:contentDescription="@string/img_calendar_desc"
                        android:scaleType="centerInside" />
                </LinearLayout>

                <!-- Reminder CheckBox -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/header_reminder" />

                    <CheckBox
                        android:id="@+id/chkReminder"
                        style="@style/CheckBoxAppTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:text="@string/lbl_yes_reminder" />
                </LinearLayout>

                <!-- Reminder Date -->
                <LinearLayout
                    android:id="@+id/trReminderDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_reminder_date" />

                    <EditText
                        android:id="@+id/txtVisitRemDate"
                        style="@style/DateTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:layout_marginStart="@dimen/_8sdp" />

                    <ImageView
                        android:id="@+id/imgVisitRemDatePicker"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:background="@drawable/calendar"
                        android:contentDescription="@string/img_calendar_desc"
                        android:scaleType="centerInside" />
                </LinearLayout>

                <!-- Reminder Time -->
                <LinearLayout
                    android:id="@+id/trReminderTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_reminder_time" />

                    <EditText
                        android:id="@+id/txtVisitRemTime"
                        style="@style/DateTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:layout_marginStart="@dimen/_8sdp" />

                    <ImageView
                        android:id="@+id/imgVisitRemTimePicker"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:background="@drawable/clock"
                        android:contentDescription="@string/img_calendar_desc"
                        android:scaleType="centerInside" />
                </LinearLayout>


                <Button
                    android:id="@+id/btnVisitSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_button"
                    android:text="@string/btn_add" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblPathologyTest"
                    style="@style/ReminderStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/expandable_panel_grad_bg"
                    android:drawableEnd="@drawable/down_arrow"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/title_pathology_test" />

                <ImageView
                    android:id="@+id/btnViewPathTest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/next_arrow" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lblPathologyContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingTop="@dimen/_5sdp">

                <!-- Row 1: Path Test Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/path_test_name" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txtPathTestName"
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:imeOptions="actionDone"
                        android:ems="10" />
                </LinearLayout>

                <!-- Row 2: Event Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_event_date" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txtPathEventDate"
                        style="@style/EditTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:imeOptions="actionDone"
                        android:ems="10" />

                    <ImageView
                        android:id="@+id/imgPathEventDatePick"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:contentDescription="@string/img_calendar_desc"
                        android:scaleType="centerInside"
                        android:src="@drawable/calendar" />

                </LinearLayout>

                <!-- Row 3: Event Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_path_event_time" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txtPathEventTime"
                        style="@style/DateTextStyle"
                        android:layout_width="0dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:ems="10" />

                    <ImageView
                        android:id="@+id/imgPathEventTimePick"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:contentDescription="@string/img_calendar_desc"
                        android:scaleType="centerInside"
                        android:src="@drawable/clock" />


                </LinearLayout>

                <!-- Row 4: Lab Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/path_testlab_name" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txtPathLabName"
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:imeOptions="actionDone"
                        android:ems="10" />
                </LinearLayout>

                <!-- Row 5: Reminder Date -->
                <LinearLayout
                    android:id="@+id/trPathReminderDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_path_reminder_date" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txtPathRemDate"
                        style="@style/DateTextStyle"
                        android:layout_width="0dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:ems="10" />

                    <ImageView
                        android:id="@+id/imgPathRemDatePicker"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:contentDescription="@string/img_calendar_desc"
                        android:scaleType="centerInside"
                        android:src="@drawable/calendar" />

                </LinearLayout>

                <!-- Row 6: Reminder Time -->
                <LinearLayout
                    android:id="@+id/trPathReminderTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_reminder_time" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txtPathRemTime"
                        style="@style/DateTextStyle"
                        android:layout_width="0dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:ems="10" />

                    <ImageView
                        android:id="@+id/imgPathRemTimePicker"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_5sdp"
