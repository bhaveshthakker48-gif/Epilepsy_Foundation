                <Button
                    android:id="@+id/btnPathologySubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_button"
                    android:text="@string/btn_add" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblRadiologyTest"
                    style="@style/ReminderStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/expandable_panel_grad_bg"
                    android:drawableEnd="@drawable/down_arrow"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/title_radiology_test" />

                <ImageView
                    android:id="@+id/btnViewRadTest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/next_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lblRadiologyContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingTop="@dimen/_5sdp">

                <!-- Row 1: Test Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatTextView
