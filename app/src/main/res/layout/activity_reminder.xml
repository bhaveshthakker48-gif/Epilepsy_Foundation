                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:layout_weight="0.8"
                        android:imeOptions="actionDone"
                        android:ems="10" />

                    <ImageView
                        android:id="@+id/imgRadEventDatePick"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:contentDescription="@string/img_calendar_desc"
                        android:scaleType="centerInside"
                        android:src="@drawable/calendar" />



                </LinearLayout>

                <!-- Row 3: Event Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_rad_event_time" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txtRadEventTime"
                        style="@style/DateTextStyle"
                        android:layout_width="0dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:ems="10" />

                    <ImageView
                        android:id="@+id/imgRadEventTimePick"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:contentDescription="@string/img_calendar_desc"
                        android:scaleType="centerInside"
                        android:src="@drawable/clock" />

                </LinearLayout>

                <!-- Row 4: Lab Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/rad_testlab_name" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txtRadLabName"
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:imeOptions="actionDone"
                        android:ems="10" />
                </LinearLayout>

                <!-- Row 5: Reminder Date -->
                <LinearLayout
                    android:id="@+id/trRadReminderDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="visible">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_rad_reminder_date" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txtRadRemDate"
                        style="@style/DateTextStyle"
                        android:layout_width="0dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:ems="10" />

                    <ImageView
                        android:id="@+id/imgRadRemDatePicker"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:contentDescription="@string/img_calendar_desc"
                        android:scaleType="centerInside"
                        android:src="@drawable/calendar" />

                </LinearLayout>

                <!-- Row 6: Reminder Time -->
                <LinearLayout
                    android:id="@+id/trRadReminderTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="visible">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_rad_reminder_time" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txtRadRemTime"
                        style="@style/DateTextStyle"
                        android:layout_width="0dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:ems="10" />

                    <ImageView
                        android:id="@+id/imgRadRemTimePicker"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:contentDescription="@string/img_calendar_desc"
                        android:scaleType="centerInside"
                        android:src="@drawable/clock" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnRadiologySubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_button"
                    android:text="@string/btn_add" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
